<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="smarteco_btn_padding_left">16dp</dimen>
    <dimen name="smarteco_btn_padding_right">16dp</dimen>
    <dimen name="smarteco_btn_inset_top">0dp</dimen>
    <dimen name="smarteco_btn_inset_bottom">0dp</dimen>

    <style name="Widget.Smartmatic.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Smartmatic.Button</item>
        <item name="android:insetTop">@dimen/smarteco_btn_inset_top</item>
        <item name="android:insetBottom">@dimen/smarteco_btn_inset_bottom</item>
    </style>

    <style name="Widget.Smartmatic.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Smartmatic.Button</item>
        <item name="android:insetTop">@dimen/smarteco_btn_inset_top</item>
        <item name="android:insetBottom">@dimen/smarteco_btn_inset_bottom</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Smartmatic.Button.Ghost" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Smartmatic.Button</item>
        <item name="android:insetTop">@dimen/smarteco_btn_inset_top</item>
        <item name="android:insetBottom">@dimen/smarteco_btn_inset_bottom</item>
        <item name="android:paddingLeft">@dimen/smarteco_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/smarteco_btn_padding_right</item>
    </style>

    <style name="TextAppearance.Smartmatic.Button" parent="TextAppearance.Smartmatic.Lead3">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.Smartmatic.Button" parent="">
        <item name="textAppearanceButton">@style/TextAppearance.Smartmatic.Button</item>
    </style>

</resources>