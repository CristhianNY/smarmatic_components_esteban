<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Smartmatic.SmartEco" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Global color attributes -->
        <item name="colorPrimary">@color/purple_60</item>
        <item name="colorPrimaryVariant">@color/purple_80</item>
        <item name="colorSecondary">@color/purple_60</item>
        <item name="colorSecondaryVariant">@color/purple_80</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red_80</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/gray_2</item>
        <item name="colorOnSurface">@color/gray_80</item>
        <item name="android:colorBackground">@color/gray_2</item>
        <item name="colorOnBackground">@color/gray_80</item>
        <item name="android:textColorPrimary">@color/gray_80</item>
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_navidation_bar</item>
        <!-- Global type attributes-->
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <!-- Button widget style attribute -->
        <item name="materialButtonStyle">@style/Widget.Smartmatic.Button</item>
        <!-- Card widget style attribute -->
        <item name="materialCardViewStyle">@style/Widget.Smartmatic.CardView</item>
        <!-- Edit text widget style attribute -->
        <item name="textInputStyle">@style/Widget.Smartmatic.TextInputLayout</item>
        <!-- To support AppCompact dialogs -->
        <item name="android:alertDialogTheme">@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog</item>
    </style>

    <style name="Theme.Smartmatic.SmartEco.Teal">
        <!-- Global color attributes -->
        <item name="colorPrimary">@color/teal_80</item>
        <item name="colorPrimaryVariant">@color/teal_100</item>
        <item name="colorSecondary">@color/teal_80</item>
        <item name="colorSecondaryVariant">@color/teal_100</item>
    </style>

    <style name="Theme.Smartmatic.SmartEco.Green">
        <!-- Global color attributes -->
        <item name="colorPrimary">@color/green_70</item>
        <item name="colorPrimaryVariant">@color/green_90</item>
        <item name="colorSecondary">@color/green_70</item>
        <item name="colorSecondaryVariant">@color/green_90</item>
    </style>
</resources>