<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="text_field_outlined_focus_color">@color/blue_60</color>
    <color name="text_field_outlined_color">@color/gray_90</color>
    <color name="text_field_error_color">@color/red_80</color>

    <dimen name="text_field_padding_top">11dp</dimen>
    <dimen name="text_field_padding_bottom">11dp</dimen>
    <dimen name="text_field_border_width">1dp</dimen>
    <dimen name="text_field_border_width_focused">1.5dp</dimen>

    <style name="Widget.Smartmatic.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Smartmatic.TextInputLayout</item>
        <item name="boxStrokeColor">@color/text_field_outlined_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/text_field_border_width</item>
        <item name="boxStrokeWidthFocused">@dimen/text_field_border_width_focused</item>
    </style>

    <style name="ThemeOverlay.Smartmatic.TextInputLayout" parent="">
        <item name="colorError">@color/text_field_error_color</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Smartmatic.Lead2</item>
        <item name="editTextStyle">@style/Widget.Smartmatic.TextInputEditText</item>
    </style>

    <style name="Widget.Smartmatic.TextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:paddingTop">@dimen/text_field_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_field_padding_top</item>
    </style>

    <style name="TextFieldCaptionSmall" parent="Widget.Smartmatic.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Smartmatic.Body2</item>
    </style>

</resources>