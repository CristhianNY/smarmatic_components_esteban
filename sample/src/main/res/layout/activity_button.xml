<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:clipToPadding="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/textButton"
            style="@style/Widget.Smartmatic.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Retry" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconTextButton"
            style="@style/Widget.Smartmatic.Button.Ghost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Retry"
            app:icon="@drawable/ic_refresh_color_control_normal_18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/outlinedButton"
            style="@style/Widget.Smartmatic.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Hide" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/iconOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Smartmatic.Button.Outlined.Default"
                android:layout_marginBottom="16dp"
                android:text="Hide"
                app:icon="@drawable/ic_hide_color_control_normal_18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ghostButton"
            style="@style/Widget.Smartmatic.Button.Ghost.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Show" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconGhostButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Smartmatic.Button.Ghost.Default"
            android:layout_marginBottom="32dp"
            android:text="Show"
            app:icon="@drawable/ic_show_color_control_normal_18dp" />



        <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleButton1Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"
                    android:text="None" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleButton2Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"
                    android:text="Custom" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleButton3Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"
                    android:text="All" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleButton1Vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="36dp"
                    android:text="None" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleButton2Vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="36dp"
                    android:text="Custom" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleButton3Vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="36dp"
                    android:text="All" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
