<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="smarteco_dialog_btn_padding_left">16dp</dimen>
    <dimen name="smarteco_dialog_btn_padding_right">16dp</dimen>

    <!-- Dialog button style -->
    <style name="Widget.Smartmatic.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Smartmatic.Button.Dialog</item>
        <item name="android:paddingStart">@dimen/smarteco_dialog_btn_padding_left</item>
        <item name="android:paddingEnd">@dimen/smarteco_dialog_btn_padding_right</item>
    </style>

    <style name="ThemeOverlay.Smartmatic.Button.Dialog" parent="">
        <item name="textAppearanceButton">@style/TextAppearance.Smartmatic.Body2</item>
        <item name="colorPrimary">@color/gray_80</item>
    </style>

    <!-- Dialog warning button style -->
    <style name="Widget.Smartmatic.Button.Dialog.Warning" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Smartmatic.Button.Dialog.Warning</item>
        <item name="android:paddingLeft">@dimen/smarteco_dialog_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/smarteco_dialog_btn_padding_right</item>
        <item name="strokeColor">@color/gold_70</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ThemeOverlay.Smartmatic.Button.Dialog.Warning" parent="">
        <item name="textAppearanceButton">@style/TextAppearance.Smartmatic.Body2</item>
        <item name="colorPrimary">@color/gold_60</item>
        <item name="colorOnPrimary">@color/gray_80</item>
    </style>

</resources>